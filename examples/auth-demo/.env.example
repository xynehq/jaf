LITELLM_URL=http://localhost:4000
LITELLM_API_KEY=anything
LITELLM_MODEL=gpt-4o-mini

# Choose one of the following flows:
# 1) OAuth2 (authorization code)
OAUTH_AUTHORIZATION_URL=https://example.com/oauth2/authorize
OAUTH_TOKEN_URL=https://example.com/oauth2/token
OAUTH_CLIENT_ID=your_client_id
OAUTH_CLIENT_SECRET=your_client_secret
OAUTH_SCOPES=openid profile email

# 2) OpenID Connect (discovery)
OIDC_DISCOVERY_URL=https://your-issuer/.well-known/openid-configuration
OIDC_CLIENT_ID=your_client_id
OIDC_CLIENT_SECRET=your_client_secret
OIDC_SCOPES=openid profile email

# Redirect URI (must be registered at your provider)
AUTH_REDIRECT_URI=http://localhost:5173/callback

# Protected API to call after auth (commonly the OIDC userinfo endpoint)
PROTECTED_API_URL=https://your-issuer/oauth2/v1/userinfo

# 3) OAuth2 (authorization code)
OAUTH_AUTHORIZATION_URL=https://example.com/oauth2/authorize
OAUTH_TOKEN_URL=https://example.com/oauth2/token
OAUTH_CLIENT_ID=your_client_id
OAUTH_CLIENT_SECRET=your_client_secret
OAUTH_SCOPES=openid profile email

# 4) API Key and Bearer examples
API_KEY_HEADER_NAME=X-API-Key
API_KEY_VALUE=your_api_key_value
BEARER_TOKEN=your_bearer_token
